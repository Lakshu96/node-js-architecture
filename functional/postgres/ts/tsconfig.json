{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "bcryptjs"],
    "declaration": true
  },
  "include": ["**/*.ts", "types"],
  "exclude": ["node_modules", "dist"]
}
